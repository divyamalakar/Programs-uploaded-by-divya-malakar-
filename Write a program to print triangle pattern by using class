#include<iostream>
#include<conio.h>

using namespace std;

int main()
{
int rows,i,j;

cout<<"simple c++ program for print triangle pattern\n";

cout<<"enter the number of rows:";

for(i=0;i<rows;i++)
{
for(j=rows;j>i;j--)
{
cout<<" ";
}
for(int k=1;k<=i+1;k++)
{
cout<<"*";
}
cout<<"\n";
}

gatch();
return 0;
}
